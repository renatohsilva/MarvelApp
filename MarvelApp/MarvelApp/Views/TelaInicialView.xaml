<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelApp.Views.TelaInicialView"
             BackgroundImage="Marvel.jpeg">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Carregar Heróis"
                    BackgroundColor="White" 
                    TextColor="#d34836" 
                    Margin="20, 0, 20, 40" 
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    Command="{Binding BuscarHeroisCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>