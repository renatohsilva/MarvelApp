<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelApp.Views.ListaHeroisView"
             xmlns:controls="clr-namespace:MarvelApp.Controls"
             xmlns:behavior="clr-namespace:MarvelApp.Behaviors"
             xmlns:converter="clr-namespace:MarvelApp.Converter"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="Herois">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ImageToStringConverter x:Key="imageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <SearchBar Placeholder="Pesquisar" Text="{Binding Filter}" HeightRequest="50"/>

        <ListView HorizontalOptions="FillAndExpand"                           
                  VerticalOptions="FillAndExpand"
                  HasUnevenRows="True"
                  ItemsSource="{Binding Personagens}"
                  SelectedItem="{Binding HeroiSelecionado, Mode=TwoWay}"
                  controls:ItemTappedAttached.Command="{Binding NavigationCommand}">
            <ListView.Behaviors>
                <behavior:InfiniteScroll LoadMoreCommand="{Binding LoadMoreCommand}" />
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame>
                            <StackLayout>
                                <ffimageloading:CachedImage HorizontalOptions="Fill" 
                                                            VerticalOptions="Fill"
                                                            Aspect="AspectFill"
                                                            DownsampleToViewSize="true"
                                                            Source="{Binding Thumbnail,
                                                                             Converter={StaticResource imageConverter}}" />
                                <StackLayout>
                                    <Label Text="{Binding Name}" 
                                           HorizontalOptions="FillAndExpand" 
                                           VerticalOptions="FillAndExpand" 
                                           VerticalTextAlignment="Center" 
                                           HorizontalTextAlignment="Center" 
                                           Style="{DynamicResource NameStyle}"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ActivityIndicator VerticalOptions="End"
                           IsVisible="{Binding IsBusy}" 
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="Center" 
                           BackgroundColor="Transparent" />
    </StackLayout>
</ContentPage>