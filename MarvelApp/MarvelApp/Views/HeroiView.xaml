<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelApp.Views.HeroiView"
             xmlns:converter="clr-namespace:MarvelApp.Converter"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="{Binding Personagem.Name}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ImageToStringConverter x:Key="imageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid BackgroundColor="#F44336">
            <Grid.RowDefinitions>
                <RowDefinition Height="320"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <ffimageloading:CachedImage Grid.Row="0" 
                                        HorizontalOptions="FillAndExpand" 
                                        VerticalOptions="FillAndExpand" 
                                        Source="{Binding Hero.Thumbnail,
                                                         Converter={StaticResource imageConverter}}" />


            <ContentView Grid.Row="1" Padding="5,5,5,5">
                <Label Text="{Binding Hero.Description}" 
                       HorizontalOptions="FillAndExpand" 
                       VerticalOptions="FillAndExpand" 
                       FontSize="13"
                       TextColor="#FFFFFF"/>
            </ContentView>

            <StackLayout Padding="10" Grid.Row="2">
                <Button Text="Abrir Web" 
                        TextColor="White" 
                        Command="{Binding OpenWeb}"/>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>